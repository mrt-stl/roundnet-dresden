{
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**",
            ".next/**"
        ]
    },
    "jsRules": {},
    "rules": {
        "semicolon": [
            true,
            "never"
        ],
        "quotemark": [
            true,
            "double"
        ],
        "trailing-comma": [
            false
        ],
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "arrow-parens": [
            false,
            "as-needed"
        ],
        "eofline": false,
        "max-line-length": [
            true,
            1000
        ],
        "linebreak-style": [
            true,
            "LF"
        ],
        "indent": [
            true,
            "spaces",
            4
        ]
    },
    "rulesDirectory": []
}